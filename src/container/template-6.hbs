{{!-- 
Це код container файлу для template-2 сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 --}}

    <header class="header">
        <div class="logo">
          {{>logo}}
        </div> 
           <nav class="header-nav col-9 header_nav_right"> 
            {{>nav list=header}}
          
        </nav>
      
    </header>
    <main class="main">
      {{#with info}}
      <div class="info_block">
        <h1 class="info_title">{{title}}</h1>
        <p class="info_description">{{description}}</p>
      </div>
      {{/with}}
      {{#with form}}
      <form class="form">
        <div class="form_input_list">
           {{#each inputs}}
           <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" id="form-input-{{id}}" />
           {{/each}}
        </div>
         <div class="form_checkbox">
          <input type="checkbox" class="{{checkbox.name}}" id="{{checkbox.name}}">
          <div></div>
          <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>
        <button class="form_button">{{button}}</button>
       
        <p class="form_info">{{info}}</p>
      </form>
      {{/with}}
    </main>

 
<div class="updates">
    {{>card_upd data=updates}}
</div>

  <div class="expirience">
    <div class="badge_block">
    <span class="badge_1">{{expirience.badge}}</span>
    </div> 
    {{#with expirience}}
    <div class="expirience_title_block">
      <strong class="expirience_title">{{title}}</strong>
    </div>
     <div class="expirience_list"> 
      {{#each list}}
          <div class="expirience_card">
            <strong class="expirience_card_name">{{name}}</strong>
            <p class="expirience_card_details">{{details}}</p>
          </div>
      {{/each}}
      </div>
    {{/with}}
  </div>


    <footer class="footer">
            <div class="">
              {{>logo}}
              <span class="footer-copyright">Copyright 2023-2024</span>
            </div>
          {{#each  footer}}
          <div class=" ">
            <span class="footer-title">{{title}}</span>
            {{>nav list=links isVertical=true}}
          </div>
          {{/each}}
       
    </footer>
 
