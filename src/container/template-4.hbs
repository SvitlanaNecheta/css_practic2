{{!-- 
Це код container файлу для template-2 сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 --}}

    <header class="header">
        <div class="">
          {{>logo}}
        </div> 
           <nav class="header-nav col-9 header_nav_right"> 
            {{>nav list=header}}
          
        </nav>
      
    </header>
    {{#with main}}
    <main class="main">
       <img src="{{image}}" alt="main image" class="main_image">
      <div class="main_content">
        <h1 class="main_title">{{heading}}</h1>
        <p class="main_text">{{descriotion}}</p>
         <a class="button main_button" href="{{href}}">
          {{button}}
        </a>
      </div>
    </main>
    {{/with}}
    
    <section class="featured">
      {{#each featured}}
        {{>card_featured data=this}}
       {{/each}}
    </section>
    <div class="actions">
   {{#each  actions}}
       <div class="actions_content">
        <h3 class="actions_title">{{heading}}</h3>
        <a class="button actions_button" href="{{url}}">
          {{text}}
        </a>
       </div>
    {{/each}}
    </div>

    <footer class="footer">
   
        
            <div class="">
              {{>logo}}
              <span class="footer-copyright">Copyright 2023-2024</span>
            </div>
          {{#each  footer}}
          <div class=" ">
            <span class="footer-title">{{title}}</span>
            {{>nav list=links isVertical=true}}
          </div>
          {{/each}}
       
    </footer>
 
