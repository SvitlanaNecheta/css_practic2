<div class="page">
  <div class="page-content">
    <header class="page-block">
      <div class="header row g-0">
        <div class="col-3">
          {{>logo}}
        </div> 
           <nav class="header-nav col-9 header_nav_right"> 
            {{>nav list=header}}
          
        </nav>
      </div>
      
    </header>
    <section class="page-block">
      <div class="hero">
        {{#with hero}}
        {{>hero title=title text=text}}
        <a class="button" href="{{button.url}}">{{button.text}}</a>
        {{/with}}
      </div>
    </section>


    <section class="page-block">
      <div class="flex-container">
        {{#each preview}}
        <div class="flex-item">
          {{>cardPreview data=this}}
        </div>
        {{/each}}
      </div>
    </section>

    <main class="page-block">
       <div>
        <div class="row g-0">
          <div class="col-12">
              <div class="list-header">
                <div class="row g-0">
                  <div class="col-6">
                    <h2 class="list-title">List of posts</h2>
                  </div>
                  <div class="col-6">
                    <div class="categiries-list">
                      {{#each categories}}
                      <button class="category-button">{{text}}</button>
                      {{/each}}
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-7">
              <div class="list">
                {{#each news}}
                {{>cardPost data=this}}
                {{/each}}
              </div>
            </div>
            <div class="col-5">
              <aside class="list-aside">
                <div class="about">
                  <h4 class="about-title">About</h4>
                  <p class="about-text">{{about}}</p>
                </div>
                 {{>linkList title="Archives" data=archive}}
                 {{>linkList title="Social" data=social}}
              </aside>
            </div>
          </div>

        </div>
      </main>

    <footer class="page-block">
   
        <div class="row footer g-0">
            <div class="col-3">
              {{>logo}}
              <span class="footer-copyright">Copyright 2023-2024</span>
            </div>
          {{#each  footer}}
          <div class="col-3">
            <span class="footer-title">{{title}}</span>
            {{>nav list=links isVertical=true}}
          </div>
          {{/each}}
        </div>
    </footer>
  </div>
</div>
